<% provide(:title, 'New company') %>
<h1>Add a new company</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@company) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<!--
			%= f.label :logo, "ロゴ" %>
			%= f. :logo %>
			-->

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :founded_date %>
			<%= f.date_field :founded_date %>

			<%= f.label :closed_date %>
			<%= f.date_field :closed_date %>

			<%= f.label :stage %>
			<%= f.text_field :stage %>

			<%= fields_for @tag do |c| %>
				<%= c.label :tag %>
				<%= c.text_field :tag %>
			<% end %>

			<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
			
		<% end %>
	</div>
</div>

