<% provide(:title, 'New company') %>
<div class="row">
	<div class="col-md-8	col-md-offset-2">
		<h1>Add a new company</h1>

		<%= form_for(@company) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<h3>Company Info</h3>
				<div class="form-horizontal">
					<div class="form-group">
						<%= f.label :logo_image, "Logo Image", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.file_field :logo_image, accept: 'image/jpeg, image/jpg, image/png, image/gif' %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :name, "Company Name", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.text_field :name, class: "form-control" %>							
						</div>
					</div>

					<div class="form-group">
						<%= f.label :hq_country, "HQ Country", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.text_field :hq_country, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :multinational, "Multinational Capacity", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.text_field :multinational, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :description, "Description", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.text_area :description, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :founded_date, "Founded on", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.date_field :founded_date, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :closed_date, "Closed on", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.date_field :closed_date, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :stage, "Investment Round", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= f.text_field :stage, class: "form-control" %>
						</div>
					</div>
				</div>

			<h3>Product</h3>
				<div class="form-horizontal">
					<%= f.fields_for :products do |p| %>
					<div class="form-group">
					<%= p.label :name, "Product Name", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= p.text_field :name %>
						</div>
					</div>

					<div class="form-group">
						<%= p.label :description, "Description", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= p.text_area :description %>
						</div>
					</div>

					<div class="form-group">
						<%= p.label :type, "Product Type", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= p.text_field :type %>
						</div>
					</div>

					<div class="form-group">
						<%= p.label :released_date, "Released Date", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= p.date_field :released_date %>
						</div>
					</div>

					<div class="form-group">
						<%= p.label :tag_list, "Tag", class: "col-md-3 control-label" %>
						<div class="col-md-9">
							<%= p.text_field :tag_list %>
						</div>
					</div>

						<br /><%= link_to "Edit tag list", tag_index_path, :target => "new" %><br /><br />

					<% end %>

			<h3>Comments</h3>
			<%= f.fields_for :comments do |c| %>

				<%= c.label :comment, "Comment" %>
				<%= c.text_area :comment %>
			<% end %>

			<h3>Links</h3>
			<%= f.fields_for :links do |l| %>
				<%= l.label :link_type, "Link Type" %>
				<%= l.text_field :link_type %>

				<%= l.label :url, "URL" %>
				<%= l.text_field :url %>
			<% end %>

			<h3>News Articles</h3>
			<%= f.fields_for :news_articles do |n| %>
				<%= n.label :date, "Article Date" %>
				<%= n.date_field :date %>

				<%= n.label :title, "Title" %>
				<%= n.text_field :title %>

				<%= n.label :url, "URL" %>
				<%= n.text_field :url %>

				<%= n.label :content, "Content" %>
				<%= n.text_area :content %>

				<%= n.label :comment, "Comment" %>
				<%= n.text_area :comment %>

				<%= n.label :publisher, "Publisher" %>
				<%= n.text_field :publisher %>
			<% end %>

			<br />
			<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
			
		<% end %>
	</div>
</div>

