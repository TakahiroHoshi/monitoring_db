<% provide(:title, 'Update company') %>
<h1>Update company information</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@company) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :logo_image %>
			<%= f.file_field :logo_image, accept: 'image/jpeg, image/jpg, image/png, image/gif' %>
			
			<%= f.label :hq_country %>
			<%= f.text_field :hq_country %>

			<%= f.label :multinational %>
			<%= f.text_field :multinational %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :founded_date %>
			<%= f.date_field :founded_date %>

			<%= f.label :closed_date %>
			<%= f.date_field :closed_date %>

			<%= f.label :stage %>
			<%= f.text_field :stage %>

			<%= f.submit "Update", class: "btn btn-large btn-primary" %>
			
		<% end %>
	</div>
</div>

