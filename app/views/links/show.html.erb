<% provide(:title) %>
<div class="row">
	<div class="col-md-8 col-md-offset-2 page-header">
		<%# find_companyはヘルパーメソッド %>
		<h1><%= Company.find_by_id(@link.company_id).name %>&nbsp;/&nbsp;<%= @link.link_type %></h1>
	</div>
</div>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h4>Company</h4>
		<% if Company.find_by_id(@link.company_id).name.present? %>
    	<%= link_to Company.find_by_id(@link.company_id).name, company_path(Company.find_by_id(@link.company_id)) %>
		<% else %>
			<br />
		<% end %>
	</div>
	<div class="col-md-8 col-md-offset-2">
		<h4>Link</h4>
		<% if @link.link_type.present? %>
			<%= link_to @link.url, @link.url %>
		<% else %>
			<br />
		<% end %>
	</div>
</div>
