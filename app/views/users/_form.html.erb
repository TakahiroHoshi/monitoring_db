<div class="row">
	<div class="col-md-6	col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

		<div class="row">
			<div class="form-horizontal">
				<div class="form-group">
					<%= f.label :name, "Name", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :name, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :email, "Email", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :email, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :id_num, "ID", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :id_num, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :organization, "Organization", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :organization, class: "form-control" %>
					</div>
				</div>

				<% if current_user.admin? %>
					<div class="form-group">
						<div class="col-md-4 control-label">
							<h4>Role</h4>
						</div>
						<div class="col-md-8">
							<p><%= f.check_box :admin %> admin</p>
							<p><%= f.check_box :regular, {:checked => true} %> ユーザー</p>
							<p><%= f.check_box :observer %> オブザーバー</p>
						</div>
					</div>
				<% else %>
				<% end %>
	
				<div class="form-group">
					<%= f.label :password, "Password", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.password_field :password, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation, "Password Confirmation", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.password_field :password_confirmation, class: "form-control" %>
					</div>
				</div>

			</div>
		</div>

		<div class="row">
			<div class="h1 col-md-offset-6">
				<%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
			</div>
		</div>
			
		<% end %>
	</div>
</div>

