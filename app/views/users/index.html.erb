<% provide(:title, 'All Users') %>
<% if current_user.admin? && !current_user?(@user) %>
	<h1>All Users</h1>

	<%= will_paginate %>

	<ul class="users">
		<% @users.each do |user| %>
	 		<li>
				<%= link_to user.name, user %> | 
				<%= user.email %> | 
				<%= link_to "edit", edit_user_path(user) %> | 
				<% if user.admin? %>
					<% else %>
					<%= link_to "Delete", user, method: :delete, data: {confirm: "You sure?"} %>
				<% end %>
			</li>
		<% end %>
	</ul>
	<%= will_paginate %>

<% else %>

<% end %>