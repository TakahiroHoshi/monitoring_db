<% provide(:title, 'Search here') %>
<div class="h1">
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="text-center jumbotron">

			<h1>Start your search</h1>

	    <div class="form-inline search-box">
	      <div class="form-group">
					<%= form_tag companies_path, :method => 'get' do %>	
						<%= text_field_tag :search, params[:search], class: "form-control" %>
						<%= submit_tag "Search Companies", name: nil, class: "btn btn-primary" %>
					<% end %>
			  </div>
			</div>

	    <div class="form-inline search-box">
	      <div class="form-group">
					<%= form_tag products_path, :method => 'get' do %>	
						<%= text_field_tag :search, params[:search], class: "form-control" %>
						<%= submit_tag "Search Products", name: nil, class: "btn btn-primary" %>
					<% end %>
			  </div>
			</div>
	  	Or, create new <%= link_to "Company", new_company_path %>.	

			<div class="taglist-box">	  
				<h4>HR Process List</h4>
				<% @hrprocess.each do |hp| %>
						<%= link_to hp.hr_process_tag, hp %> | 
				<% end %>
			</div>

			<div class="taglist-box">	  
				<h4>Tag List</h4>
				<% @tag.each do |tag| %>
						<%= link_to tag.name, tag %> | 
				<% end %>
			</div>

	  </div>
	</div>
</div>
