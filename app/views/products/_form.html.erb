<div class="row">
	<div class="col-md-6	col-md-offset-3">
		<%= form_for(@product) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

		<div class="row">
			<div class="form-horizontal">
				<div class="form-group">
					<%= f.label :name, "Product Name", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :name, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :description, "Description", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_area :description, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :hr_process, "HR Process", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :hr_process, class: "form-control" %>
					</div>
				</div>

				<div class="col-md-8 col-md-offset-4">
					<h5>HR Process List</h5>
					<%= @all_hr_processes.each do |pr| %>
						<%= pr %>&nbsp;/&nbsp; 
					<% end %>
					<div class="taglist-box">

					</div>
				</div>

				<div class="form-group">
					<%= label_tag :new_rev_model, "Add New Revenue Model", class: "control-label col-md-4" %>
					<div class="col-md-4">
						<%= text_field_tag :new_rev_model, nil, placeholder: "input new revenue model", class: "form-control", size: 75 %>
					</div>
					<div class="col-md-1"> or </div>
					<div class="col-md-3">
						<%= f.select :rev_model, @rev_model_list, {prompt: "Select"}, { class: "form-control" } %>
						<%#= f.select :rev_model, Product.all.map{|p| p.rev_model}.uniq!.compact!, {prompt: "Select"}, { class: "form-control" } %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :released_date, "Released Date", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.date_field :released_date, class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :tag_list, "Tag", class: "col-md-4 control-label" %>
					<div class="col-md-8">
						<%= f.text_field :tag_list, class: "form-control" %>
						<%= link_to "Edit tag list", tag_index_path, :target => "new" %><br /><br />
					</div>
				</div>
			</div>
		</div>
		
		<%= f.hidden_field :company_id %>

		<div class="row">
			<div class="h1 col-md-offset-6">
				<%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
			</div>
		</div>
		<% end %>
	</div>
</div>