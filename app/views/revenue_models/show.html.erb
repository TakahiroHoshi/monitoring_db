<% provide(:title, @revenue_model.rev_model) %>
<div class="row">
	<div class="col-md-8 col-md-offset-2 page-header">
		<h1><%= @revenue_model.rev_model %></h1>
	</div>
</div>

<div class="row">
	<div class="col-md-8 col-md-offset-2">

		<h4><%= @revenue_model.rev_model %> products</h4>
		<% @tagged_products.each do |prd| %>
			<% @company = Company.find(prd.company_id) %>
			<ul>
				<li>
				<%= link_to prd.name, product_path(id: prd.id) %> <%= link_to "(#{@company.name})", company_path(@company) %>
				</li>
			</ul>
		<% end %>

	</div>
</div>